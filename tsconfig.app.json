{
    "extends": "./tsconfig.common.json",
    "compilerOptions": {
        "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
        "baseUrl": "./",
        "jsx": "react-jsx",
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "ESNext",
        "paths": {
            "@src/*": [
                "./src/*"
            ]
        },
        "skipLibCheck": true,
        "target": "ES2020",
        // "typesRoots": [
        //     "./node_modules/@types",
        //     "./node_modules/@src"
        // ]
        "useDefineForClassFields": true,
    },
    "include": [
        "src"
    ]
}
